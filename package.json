{
  "name": "bigessentials-js-exercises",
  "version": "1.0.0",
  "description": "JavaScript exercises collection with TypeScript and Tailwind CSS",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\" \"npm run serve\"",
    "build": "npm run build:css && npm run build:ts",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./dist/styles/main.css --minify",
    "build:ts": "tsc",
    "watch:css": "tailwindcss -i ./src/styles/main.css -o ./dist/styles/main.css --watch",
    "watch:ts": "tsc --watch",
    "serve": "live-server ./dist --port=3000",
    "test": "jest"
  },
  "keywords": [
    "javascript",
    "typescript",
    "exercises",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
